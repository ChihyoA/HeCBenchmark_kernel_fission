
mkfile_path := $(abspath $(lastword $(MAKEFILE_LIST)))
current_dir := $(dir $(mkfile_path))

#___THIS_DIR:=$(abspath $(lastword $(MAKEFILE_LIST)))
#$(shell dirname $(realpath $(firstword $(MAKEFILE_LIST))))

$(info $$mkfile_path is [${mkfile_path}])
$(info $$current_dir is [${current_dir}])

include $(current_dir)/host.make.config

# include the timing header
FLAGS_TO_ADD = -I$(current_dir)/ -include my_timing.h
# define the compiler name
ifdef COMPILER_NAME
      FLAGS_TO_ADD += -D_MY_COMPILER_NAME_=\"$(COMPILER_NAME)\"
endif

CC_FLAGS += $(FLAGS_TO_ADD)
CXX_FLAGS += $(FLAGS_TO_ADD)
NVCC_FLAGS += $(FLAGS_TO_ADD)

